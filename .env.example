# ============================================================================
# LASERHENK - Environment Configuration Template
# ============================================================================
# Kopiere diese Datei zu .env und fülle die Secrets aus
# cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# OpenAI / LLM Configuration
# ----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORG_ID=your_openai_org_id_here  # Optional: Organization ID

# ----------------------------------------------------------------------------
# LangSmith Tracing (Optional - für Debugging)
# ----------------------------------------------------------------------------
# LangSmith deaktivieren falls nicht benötigt (verhindert Port 6543 Connection Errors)
LANGCHAIN_TRACING_V2=false
# Falls aktiviert:
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=laserhenk

# ----------------------------------------------------------------------------
# PostgreSQL RAG Database (mit pgvector für Embeddings)
# ----------------------------------------------------------------------------
# Beide Variablen werden unterstützt: DATABASE_URL oder POSTGRES_CONNECTION_STRING
POSTGRES_CONNECTION_STRING=postgresql://user:password@localhost:5432/henk_rag
DATABASE_URL=postgresql://user:password@localhost:5432/henk_rag

# Database Connection Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ----------------------------------------------------------------------------
# Vector Embeddings
# ----------------------------------------------------------------------------
# WICHTIG: Dimension muss mit Datenbank-Schema übereinstimmen!
# - 384 für sentence-transformers/all-MiniLM-L6-v2 (local)
# - 1536 für OpenAI text-embedding-ada-002 oder text-embedding-3-small (default)
#
# Aktuelle Datenbank verwendet: vector(1536)
EMBEDDING_DIMENSION=1536
EMBEDDING_MODEL=text-embedding-3-small

# ----------------------------------------------------------------------------
# PIPEDRIVE CRM Integration
# ----------------------------------------------------------------------------
PIPEDRIVE_API_KEY=your_pipedrive_api_key_here
PIPEDRIVE_DOMAIN=your-company
PIPEDRIVE_API_URL=https://api.pipedrive.com/v1

# ----------------------------------------------------------------------------
# SAIA 3D Measurement (future)
# ----------------------------------------------------------------------------
SAIA_API_KEY=your_saia_api_key_here
SAIA_API_URL=https://api.saia.com
SAIA_TIMEOUT=30

# ----------------------------------------------------------------------------
# Google Drive Integration (optional)
# ----------------------------------------------------------------------------
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials/google_drive_credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO          # DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG=false

# ----------------------------------------------------------------------------
# API Server (optional)
# ----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Auto-reload in development

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
SECRET_KEY=your_secret_key_here_min_32_chars_random
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ----------------------------------------------------------------------------
# Rate Limiting & Performance
# ----------------------------------------------------------------------------
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_DALLE=true
ENABLE_SAIA=false
ENABLE_CRM=true
ENABLE_RAG=true
